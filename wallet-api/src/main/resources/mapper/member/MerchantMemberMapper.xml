<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mctpay.wallet.mapper.member.MerchantMemberMapper">

    <sql id="Base_Column_List">
	    id, merchant_id, member_id, status, create_time, update_time</sql>

    <!-- 注册成为会员 -->
    <insert id="insertMember">
        INSERT INTO mct_merchant_member
        VALUES (#{id}, #{merchantId}, #{memberId}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <select id="get" resultType="com.mctpay.wallet.model.entity.member.MerchantMemberEntity">
        select
        <include refid="Base_Column_List"/>
        from mct_merchant_member where id = #{value}
    </select>

    <sql id="where">
        <where>
            <include refid="baseWhere"></include>
        </where>
    </sql>

    <sql id="baseWhere">
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="merchantId != null">
            and merchant_id = #{merchantId}
        </if>
        <if test="memberId != null">
            and member_id = #{memberId}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="createTime != null">
            and create_time = #{createTime}
        </if>
        <if test="updateTime != null">
            and update_time = #{updateTime}
        </if>
    </sql>

</mapper>